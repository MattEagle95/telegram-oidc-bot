{
  "name": "telegram-oidc-bot",
  "version": "1.0.0",
  "description": "An example of a Telegram Bot using OpenID Connect and PrismaJS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs",
    "clean": "rm -rf node_modules && rm -rf dist",
    "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"node dist/index.js\" | pino-pretty",
    "lint": "tsc --noEmit && eslint \"src/*\"",
    "prettier": "prettier --write \"src/*\"",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "skrambl",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "openid-client": "^5.4.2",
    "pino": "^8.12.0",
    "pino-pretty": "^10.0.0",
    "telegraf": "^4.12.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
